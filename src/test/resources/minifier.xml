<?xml version="1.0" encoding="utf-8"?>

<minifier>

  <bundle path="/res/bookmarks.min.css" type="css">
      <max-age>86400</max-age>
      <resources>
        <resource>/WEB-INF/styles/bookmarks.css</resource>
      </resources>
  </bundle>
  
  <!-- use case bundles -->  
  
  <bundle path="/res/deletetag.min.js" extends="dwr,jquery">
      <max-age>3600</max-age>
      <resources>
         <resource l10n="true">/WEB-INF/scripts/deletetag.js</resource>
      </resources>
  </bundle>
  
  <bundle path="/res/edit.min.js" extends="dwr,jquery">
      <max-age>3600</max-age>  
      <resources>
         <resource>/WEB-INF/scripts/edit.js</resource>
      </resources>
  </bundle>
  
  <bundle path="/res/renametag.min.js" extends="dwr,jquery">>
      <max-age>3600</max-age>
      <resources>
         <resource>/WEB-INF/scripts/renametag.js</resource>
      </resources>  
  </bundle>
  
  <bundle path="/res/subscribe.min.js" extends="dwr,jquery">
      <max-age>3600</max-age>  
      <resources>
         <resource>/WEB-INF/scripts/subscribe.js</resource>
      </resources>
  </bundle>  
  
  <bundle path="/res/toggle.min.js" extends="jquery">  
      <max-age>3600</max-age>
      <resources>
         <resource>/WEB-INF/scripts/toggle.js</resource>
      </resources>
  </bundle>
  
  <!-- lib bundles -->  

  <bundle name="dwr">
      <resources>
         <resource forward="true">/dwr/interface/ServiceFacade.js</resource>
         <resource forward="true">/dwr/engine.js</resource>
      </resources>           
  </bundle>
  
  <bundle name="jquery">
      <resources>
         <resource>/WEB-INF/scripts/jquery/jquery-1.2.1.js</resource>
      </resources>           
  </bundle>
    
</minifier>